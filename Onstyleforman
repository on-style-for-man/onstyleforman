const productsGrid = document.getElementById('products-grid');
const cartBtn = document.getElementById('cart-btn');
const cartCount = document.getElementById('cart-count');
const cartPanel = document.getElementById('cart-panel');
const cartItemsEl = document.getElementById('cart-items');
const cartTotalEl = document.getElementById('cart-total');
const checkoutBtn = document.getElementById('checkout-btn');
const yearEl = document.getElementById('year');

let cart = JSON.parse(localStorage.getItem('cart') || "[]");

function saveCart(){ localStorage.setItem('cart', JSON.stringify(cart)); updateCartUI(); }
function updateCartUI(){
  cartCount.textContent = cart.reduce((s,i)=>s+i.qty,0);
  cartItemsEl.innerHTML = '';
  let total = 0;
  if(cart.length===0) cartItemsEl.innerHTML = '<p>Seu carrinho está vazio.</p>';
  cart.forEach(item=>{
    total += item.qty * item.price;
    const div = document.createElement('div');
    div.className = 'cart-item';
    div.innerHTML = `
      <img src="${item.img}" alt="${item.title}" />
      <div style="flex:1">
        <div style="font-weight:600">${item.title}</div>
        <div>R$ ${item.price.toFixed(2)} x ${item.qty}</div>
        <div style="margin-top:6px">
          <button data-id="${item.id}" class="dec">-</button>
          <button data-id="${item.id}" class="inc">+</button>
          <button data-id="${item.id}" class="rm">Remover</button>
        </div>
      </div>
    `;
    cartItemsEl.appendChild(div);
  });
  cartTotalEl.textContent = total.toFixed(2);
  cartItemsEl.querySelectorAll('.inc').forEach(b=>b.onclick=e=>{ changeQty(e.target.dataset.id,1); });
  cartItemsEl.querySelectorAll('.dec').forEach(b=>b.onclick=e=>{ changeQty(e.target.dataset.id,-1); });
  cartItemsEl.querySelectorAll('.rm').forEach(b=>b.onclick=e=>{ removeItem(e.target.dataset.id); });
}

function changeQty(id, delta){
  const idx = cart.findIndex(c=>c.id===id);
  if(idx===-1) return;
  cart[idx].qty += delta;
  if(cart[idx].qty <= 0) cart.splice(idx,1);
  saveCart();
}

function removeItem(id){ cart = cart.filter(i=>i.id!==id); saveCart(); }

function addToCart(product, qty=1){
  const exists = cart.find(i=>i.id===product.id);
  if(exists) exists.qty += qty;
  else cart.push({...product, qty});
  saveCart();
  alert(`${product.title} adicionado ao carrinho.`);
}

// Monta grid
function renderProducts(){
  productsGrid.innerHTML = '';
  products.forEach(p=>{
    const card = document.createElement('div');
    card.className = 'card';
    card.innerHTML = `
      <img src="${p.img}" alt="${p.title}" />
      <div class="title">${p.title}</div>
      <div class="price">R$ ${p.price.toFixed(2)}</div>
      <div class="actions">
        <button class="btn-primary view" data-id="${p.id}">Ver</button>
        <button class="btn-primary add" data-id="${p.id}">Comprar</button>
      </div>
    `;
    productsGrid.appendChild(card);
  });

  document.querySelectorAll('.add').forEach(btn=>{
    btn.onclick = (e)=>{
      const id = e.target.dataset.id;
      const p = products.find(x=>x.id===id);
      addToCart(p,1);
    }
  });

  document.querySelectorAll('.view').forEach(btn=>{
    btn.onclick = (e)=>{
      const id = e.target.dataset.id;
      const p = products.find(x=>x.id===id);
      openModal(p);
    }
  });
}

// Modal produto
const modal = document.getElementById('product-modal');
const modalBody = document.getElementById('modal-body');
document.getElementById('modal-close').onclick = closeModal;
function openModal(p){
  modalBody.innerHTML = `
    <div style="display:flex;gap:1rem;flex-wrap:wrap">
      <img src="${p.img}" alt="${p.title}" style="width:320px;height:320px;object-fit:cover;border-radius:6px" />
      <div style="flex:1">
        <h3>${p.title}</h3>
        <p style="color:#666">${p.desc}</p>
        <p style="font-weight:700">R$ ${p.price.toFixed(2)}</p>
        <div style="display:flex;gap:0.6rem;margin-top:1rem">
          <button id="modal-add" class="btn-primary">Adicionar ao carrinho</button>
        </div>
      </div>
    </div>
  `;
  document.getElementById('modal-add').onclick = ()=>{ addToCart(p,1); closeModal(); };
  modal.classList.remove('hidden');
}
function closeModal(){ modal.classList.add('hidden'); }

// Carrinho painel
cartBtn.onclick = ()=>{ cartPanel.classList.toggle('hidden'); updateCartUI(); }
document.getElementById('close-cart').onclick = ()=> cartPanel.classList.add('hidden');

checkoutBtn.onclick = ()=>{
  if(cart.length===0){ alert("Carrinho vazio."); return; }
  // Simulação: aqui você pode integrar com pagamento real
  alert("Pedido simulado. Implemente gateway de pagamento para finalizar.");
  cart = []; saveCart();
}

// Contact form (simples)
document.getElementById('contact-form').onsubmit = (e)=>{
  e.preventDefault();
  alert("Mensagem enviada! Em breve entraremos em contato.");
  e.target.reset();
};

document.addEventListener('click', (e)=>{
  if(e.target === modal) closeModal();
});

yearEl.textContent = new Date().getFullYear();
renderProducts();
updateCartUI();
